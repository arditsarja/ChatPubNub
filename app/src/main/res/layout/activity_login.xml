<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/holo_blue_bright"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity">

    <!--android:background="@android:color/darker_gray"

     android:background="#95ffffff"
    -->
    <android.support.constraint.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="327dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"

        android:background="@drawable/layer_style"
        android:minHeight="190dp"
        custom:layout_constraintBottom_toBottomOf="parent"
        custom:layout_constraintEnd_toEndOf="parent"
        custom:layout_constraintStart_toStartOf="parent"
        custom:layout_constraintTop_toTopOf="parent"
        custom:layout_constraintVertical_bias="0.392">

        <ImageView
            android:id="@+id/imageLogo"
            android:layout_width="189dp"
            android:layout_height="101dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/logo"
            custom:layout_constraintBottom_toTopOf="@+id/usernameEdit"
            custom:layout_constraintEnd_toEndOf="parent"
            custom:layout_constraintHorizontal_bias="0.5"
            custom:layout_constraintStart_toStartOf="parent"
            custom:layout_constraintTop_toTopOf="parent"
            custom:srcCompat="@drawable/logo" />


        <EditText
            android:id="@+id/usernameEdit"
            android:layout_width="235dp"
            android:layout_height="37dp"
            android:background="@drawable/edit_test"
            android:hint="@string/username"
            android:padding="10sp"
            custom:layout_constraintBottom_toTopOf="@+id/passwordEdit"
            custom:layout_constraintEnd_toEndOf="parent"
            custom:layout_constraintHorizontal_bias="0.5"
            custom:layout_constraintStart_toStartOf="parent"
            custom:layout_constraintTop_toBottomOf="@+id/imageLogo" />

        <EditText
            android:id="@+id/passwordEdit"
            android:layout_width="235dp"
            android:layout_height="37dp"
            android:background="@drawable/edit_test"
            android:ems="10"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:padding="10sp"
            custom:layout_constraintBottom_toTopOf="@+id/goBtn"
            custom:layout_constraintEnd_toEndOf="parent"
            custom:layout_constraintHorizontal_bias="0.507"
            custom:layout_constraintStart_toStartOf="parent"
            custom:layout_constraintTop_toBottomOf="@+id/usernameEdit" />

        <Button
            android:id="@+id/goBtn"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/login_button"
            android:onClick="joinChat"
            android:text="@string/login"
            android:textColor="@android:color/white"
            custom:layout_constraintBottom_toBottomOf="parent"
            custom:layout_constraintEnd_toEndOf="parent"
            custom:layout_constraintHorizontal_bias="0.5"
            custom:layout_constraintStart_toStartOf="parent"
            custom:layout_constraintTop_toBottomOf="@+id/passwordEdit" />


    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
